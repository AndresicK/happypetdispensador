<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".configBt">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar3"
        android:layout_width="417dp"
        android:layout_height="0dp"
        android:layout_marginBottom="320dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toTopOf="@+id/textView10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/cfgBt" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="363dp"
        android:layout_height="110dp"
        android:layout_marginTop="32dp"
        android:text="Para que el dispositivo se pueda conectar a internet es posible que se necesite configurar el dispositivo a traves de Bluetooth. Para conectar el dispositivo, siga los siguientes pasos... "
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar3"
        tools:text="Para que el dispositivo se pueda conectar a internet es posible que se necesite configurar el dispositivo a traves de Bluetooth. Para conectar el dispositivo, siga los siguientes pasos... " />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="124dp"
        android:text="1. Dirijase a la configuracion del dispositivo movil."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="2. Ingrese a las configuraciones de Bluetooth y enciendalo."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="291dp"
        android:layout_height="39dp"
        android:layout_marginTop="24dp"
        android:text="3. Escanee dispositivos cercanos y conectese al dispositivo con los siguientes datos:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <Button
        android:id="@+id/button2"
        android:layout_width="164dp"
        android:layout_height="48dp"
        android:layout_marginTop="44dp"
        android:onClick="cfgWifi"
        android:text="@string/btnSgte"
        app:icon="@drawable/ic_baseline_arrow_forward_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.935"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        app:layout_constraintVertical_bias="0.037"
        tools:text="@string/btnSgte" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DISP-0000"
        app:layout_constraintBottom_toTopOf="@+id/textView10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        app:layout_constraintVertical_bias="1.0"
        tools:text="DISP-0000" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="175dp"
        android:layout_height="0dp"
        android:layout_marginBottom="311dp"
        android:text="PD: Los numeros varian segun el numero de serie indicado en el producto."
        android:textColor="@color/design_default_color_error"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar3" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="323dp"
        android:layout_height="49dp"
        android:layout_marginTop="64dp"
        android:text="Al haber finalizado los pasos anteriormente mencionados, presione el boton siguiente."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.272"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        tools:text="Al haber finalizado los pasos anteriormente mencionados, presione el boton siguiente." />

</androidx.constraintlayout.widget.ConstraintLayout>